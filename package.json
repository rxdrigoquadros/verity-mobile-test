{
  "name": "wdio-mobile-automation",
  "version": "1.0.0",
  "description": "Automação de testes mobile com WebdriverIO",
  "scripts": {
    "test:android": "wdio config/wdio.android.conf.js",
    "test:ios": "wdio config/wdio.ios.conf.js",
    "test:bs": "wdio config/wdio.browserstack.conf.js",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "clean": "rm -rf allure-results allure-report screenshots/*.png",
    "appium:update": "appium driver update uiautomator2 && appium driver update xcuitest",
    "appium:list": "appium driver list --installed"
  },
  "devDependencies": {
    "@wdio/allure-reporter": "^8.39.0",
    "@wdio/appium-service": "^8.39.0",
    "@wdio/cli": "^8.39.0",
    "@wdio/local-runner": "^8.39.0",
    "@wdio/mocha-framework": "^8.39.0",
    "@wdio/spec-reporter": "^8.39.0",
    "appium": "^2.11.0",
    "appium-uiautomator2-driver": "^3.0.0",
    "appium-xcuitest-driver": "^5.0.0",
    "chai": "^4.3.10",
    "allure-commandline": "^2.25.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "webdriverio",
    "appium",
    "mobile",
    "automation",
    "testing"
  ],
  "author": "Seu Nome",
  "license": "MIT"
}